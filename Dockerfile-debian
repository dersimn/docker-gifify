FROM node:25.2.1-bookworm-slim@sha256:22b7a5c7cd4ee42d910e7c8f013ac72df82cab6bf444d99f3d294d4a2b7a8c87

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
