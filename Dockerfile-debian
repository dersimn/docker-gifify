FROM node:24.4.1-bookworm-slim@sha256:3513addb3f1fab6467838e3922be1cf5ab2e5a01e03e448e25240c8cac7d164a

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
