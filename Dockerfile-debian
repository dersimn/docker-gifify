FROM node:23.11.0-bookworm-slim@sha256:b6e3cd79403149289fe5fe89959f95e6ea60861ef73a659619a7b5106b8c2ea7

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
