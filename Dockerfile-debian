FROM node:25.5.0-bookworm-slim@sha256:0c9942e482b541b0b72b6f18bfd81ec46e6dc6f06be603d542eb4f17f330832a

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
