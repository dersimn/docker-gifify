FROM node:25.2.1-bookworm-slim@sha256:f40502efabc5d4c0fef48554f2b75c81ec7593c25be1360e3aaedcabd359d83b

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
