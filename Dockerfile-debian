FROM node:23.10.0-bookworm-slim@sha256:3e820af4c6b3d143d25944e48e15fd725e5b1b842f443a8640d2b397584d3546

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
