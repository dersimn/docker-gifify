FROM node:23.11.0-bookworm-slim@sha256:e60ee5eec51007031b374ac34f8759491aa5eeb90ece7389c12d6a9c3b6c27e0

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
