FROM node:24.4.1-bookworm-slim@sha256:2b882fe89f25b32689b0de46a3142be8b2bfeaf8d20119828c51578964587594

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
