FROM node:24.2.0-bookworm-slim@sha256:066785e9a3436701657822276ffeb904c75c675d396c5e26798b291a1fa099be

RUN apt-get update && \
    apt-get install -y \
        gifsicle \
        ffmpeg \
        imagemagick

# install gifify
RUN npm i -g gifify

# run gifify in /data (requires user to mount their source folder in /data)
WORKDIR /data
ENTRYPOINT ["gifify"]
